<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        <hibernate-mapping>
        <class name="com.hb.model.Person" table="PERSON" dynamic-update="true">
        <id name ="id" column="ID" >
        <generator class="sequence"/>
        </id>
        <property name="name" column="NAME" length="20" not-null="true" unique="true"/>
        <property name="country" column="COUNTRY" length="20"/>
        <property name="num" column="num"/>
        </class>
        </hibernate-mapping>